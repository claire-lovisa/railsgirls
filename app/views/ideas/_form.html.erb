<%= bootstrap_form_with(model: idea, local: true) do |form| %>
<% if idea.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(idea.errors.count, "error") %>
      prohibited this idea from being saved:</h2>

    <ul>
      <% idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form.text_field :name %>
<%= form.text_area :description %>
<%= form.file_field :picture %>
<%= form.submit %>

<% end %>
